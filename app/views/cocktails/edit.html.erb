<div class="container">

  <div class="col-xs-12">
    <h1><%= @cocktail.name %></h1>

    <!--  link_to "Modify the cocktail", root_path  -->

    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3>Recipe   <span class='glyphicon glyphicon-glass'></span> </h3>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient </th>
              <th>Description</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to "delete this ingredient", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-primary'%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
<div class="container">
  <div class="col-sm-12 col-md-6">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <dt><p>Select an ingredient in the list:</p></dt>
  <dt><%= f.association :ingredient %></dt>
  <dt><p></p></dt>
  <dt><p>Give the proportion of the ingredient </p></dt>
  <dt><%= f.input :description %></dt>
  <%= f.button :submit  %>
  <% end %>
  </div>
</div>
<div class="container">
  <h4><%= link_to ' Back to ' + @cocktail.name, cocktail_path, class: 'glyphicon glyphicon-hand-right'%></h4>
  <h4><%= link_to " Back to all cocktails ", root_path, class: 'glyphicon glyphicon-hand-right'%></h4>


</div>



